<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_settings"
    app:startDestination="@+id/settings">

    <fragment
        android:id="@+id/settings"
        android:name="com.example.gituser.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings">
    <action
        android:id="@+id/to_night_mode"
        app:destination="@+id/night_mode"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out" />
    <action
        android:id="@+id/to_language"
        app:destination="@+id/language"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/wait_anim"
        app:popEnterAnim="@anim/wait_anim"
        app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/night_mode"
        android:name="com.example.gituser.nightmode.NightModeFragment"
        tools:layout="@layout/fragment_night_mode" />
    <fragment
        android:id="@+id/language"
        android:name="com.example.gituser.language.LanguageFragment"
        tools:layout="@layout/fragment_language" />
</navigation>